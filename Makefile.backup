CC = gcc
CFLAGS = -pthread -Wall -Wextra -g -I./include
LDFLAGS = -lrt -pthread
TARGET = server

# Add game_logic.c and scheduler.c to sources
SRCS = src/server.c src/shared_mem.c src/game_logic.c src/scheduler.c
OBJS = $(SRCS:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJS) $(LDFLAGS)
	@echo "âœ… Build successful"

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(TARGET) $(OBJS)
	rm -f /dev/shm/*blackjack* 2>/dev/null || true

run: $(TARGET)
	@echo "â–¶  Starting server..."
	./$(TARGET)

test: $(TARGET)
	@echo "ðŸ§ª Running test (10 seconds)..."
	timeout 10 ./$(TARGET) 2>&1 | grep -E "(GAME|SCHEDULER|DEAL|Player)" || true

.PHONY: all clean run test
